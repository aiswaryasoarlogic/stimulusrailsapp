<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<script type = "text/javascript">     
    event.preventDefault();
</script>
<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
            <h3>Welcome</h3>
            <p>This is my first Ruby on Rails App!</p>
        </div>
        <div class="col-md-9 register-right"></br>
        <div style="float: right; height: 34px; padding: 0.3%; padding: 5px; background-color: #0062cc; border-top-left-radius: 1.5rem; border-bottom-left-radius: 1.5rem; border-top-right-radius: 1.5rem; border-bottom-right-radius: 1.5rem">
        <button style="float: right; background-color: #0062cc; border:none; border-top-left-radius: 1.5rem; border-bottom-left-radius: 1.5rem; border-top-right-radius: 1.5rem; border-bottom-right-radius: 1.5rem" type="button"><a style="color: white; font-weight: 600; text-decoration: none" href="/users">Register</a></button>
        <button style="float: right; border: none;  background-color: white;border-top-left-radius: 1.5rem; border-bottom-left-radius: 1.5rem; border-top-right-radius: 1.5rem; border-bottom-right-radius: 1.5rem" type="button"><a style="color: blue; font-weight: 600; text-decoration: none" href="/userlogin">Signin</a></button>
           </div>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show " id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Registration</h3>
                    <div data-controller="userlogin">
                    <form action="/users" enctype="multipart/form-data" method = "POST" class="row register-form">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                                <input type="text" data-userlogin-target="name" class="form-control" name="user[name]" placeholder="Your Full Name *" required value="" />
                                <span style="color: red" data-userlogin-target="nameoutput"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" data-userlogin-target="profession" name="user[profession]" placeholder="Your Profession *" required value="" />
                                <span data-userlogin-target="professionoutput"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" data-userlogin-target="password" name="user[password]" placeholder="Password *" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required value="" />
                                <span data-userlogin-target="passwordoutput"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" class="form-control" data-userlogin-target="email" name="user[email]" placeholder="Your Email *" size="30" required value="" />
                                <span data-userlogin-target="emailoutput"></span>
                            </div></br>
                            <div class="form-group">
                                <input type="text" minlength="10" maxlength="10" data-userlogin-target="phone" name="user[phone]"  class="form-control" placeholder="Your Phone *" required value="" />
                                <span data-userlogin-target="phoneoutput"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" data-userlogin-target="confirmpwd" name="user[password_confirmation]" placeholder="Confirm Password *" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required value="" />
                                <span data-userlogin-target="confirmpwdoutput"></span>
                            </div>
                            <button class="btnRegister" data-action="click->userlogin#validate">Validate</button>
                            <input type="submit" data-userlogin-target="submitbtn" class="btnRegister"  value="Register"/>
                        </div>
                    </form>
                    </div>
                </div>
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <h3  class="register-heading">Sign In</h3>
                    <form action="/sessions" method = "POST" class="row register-form">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                                <input type="email" class="form-control" placeholder="Email *" size="30" name="login[email]" required value="" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password *" name="login[password]" required value="" />
                            </div>
                            <% if flash[:login_errors] %>
                                <% flash[:login_errors].each do | error| %>
                                    <p style="color: red"><%=error %>!!<p>
                                <% end %>
                            <% end %>
                            <div>
                                <a href="/password/reset">Forgot your password?</a>
                                <% link_to "Forgot your password?", password_reset_path %>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btnRegister"  value="Sign In"/>
                            </div>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>