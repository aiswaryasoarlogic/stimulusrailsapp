
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <img src="PurpleAdmin-Free-Admin-Template-master/assets/images/logo.svg">
                </div>
                <h4>Hello! lets get started</h4>
                <h6 class="font-weight-light">Sign in to continue.</h6>
                <div data-controller="adminlogin">
                <form class="pt-3" action="\admin" method="POST">
                  <div class="form-group">
                  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                    <input type="email" data-adminlogin-target="email" data-action="focusout->adminlogin#changehandler" name="login[email]" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                    <span style="color: red" data-adminlogin-target="emailoutput"></span>
                  </div>
                  <div class="form-group">
                    <input type="password" data-adminlogin-target="password" data-action="focusout->adminlogin#changehandler" name="login[password]" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                    <span style="color: red" data-adminlogin-target="passwordoutput"></span>
                  </div>
                  <div class="mt-3">
                    <button data-action="click->adminlogin#validate"  class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" >Validate</button>
                    <button type="submit" data-adminlogin-target="submitbtn" hidden class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" >SIGN IN</button>
                  </div>
                  <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                      <label class="form-check-label text-muted">
                        <input type="checkbox" class="form-check-input"> Keep me signed in </label>
                    </div>
                    
                    <div>
                                <a href="/password/reset" class="auth-link text-black">Forgot your password?</a>
                                <% link_to "Forgot your password?", password_reset_path %>
                            </div>
                  </div>
                  <div class="mb-2">
                    <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                      <i class="mdi mdi-facebook mr-2"></i>Connect using facebook </button>
                  </div>
                  <div class="text-center mt-4 font-weight-light"> No have an account? <a href="register.html" class="text-primary">Create</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../assets/js/off-canvas.js"></script>
    <script src="../../assets/js/hoverable-collapse.js"></script>
    <script src="../../assets/js/misc.js"></script>
    <!-- endinject -->
  </body>
</html>