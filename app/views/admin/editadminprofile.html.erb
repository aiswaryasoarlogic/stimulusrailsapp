<div class="content-wrapper">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                
            <h2 style="text-align: center; color: #9a55ff">Edit Profile</h2>
        
    <div class="row">
  		<div class="col-sm-3"><!--left col-->
            <div class="text-center">
            </br>
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                <h6>Upload a different photo...</h6>
                <input type="file" name="user[image]" >
            </div><br>
        </div><!--/col-3-->
        <div  class="col-sm-1"></div>
    	<div  class="col-sm-8">
            </br>
                <form class="form" action="/updateadminprofile" enctype="multipart/form-data" method="post" id="registrationForm">
                    <div class="form-group">
                        <label for="exampleInputUsername1">First name</label>
                        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                        <input type="text" class="form-control" name="user[name]" value=<%= @user.name %> id="exampleInputUsername1" placeholder="First name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" name="user[email]" value=<%= @user.email %> id="exampleInputEmail1" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Profession</label>
                        <input type="text" class="form-control" name="user[profession]" value=<%= @user.profession %> id="exampleInputEmail1" placeholder="Profession">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Phone</label>
                        <input type="text" class="form-control" name="user[phone]" value=<%= @user.phone %> id="exampleInputEmail1" placeholder="Phone">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Change Image</label>
                        <input type="file" name="user[image]" >
                    </div>
                    
                    <div class="form-group">
                        <div class="col-xs-12">
                        </br>
                            <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>      	
                        </div>
                      </div>
              	</form>
                </div>
            </div>  
        </div><!--/col-9-->

        
    </div><!--/row-->
                                                      
</div>
</div>
      
