<div class="row">
        <div class="col-12 grid-margin">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Users List</h4>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th> User ID </th>
                      <th> Name </th>
                      <th> Status </th>
                      <th> Profession </th>
                      <th> Email ID </th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @alluser.each do |user| %>
                    <tr>
                    <td> USER<%= user.id %></td>
                      <td>
                      <% if user.image.attached? %>
                        <%= link_to image_tag(user.image), users_path %>
                      <% else %>
                            <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="Avatar" class="avatar">
                      
                        <% end %> <%= user.name %>
                      </td>
                      
                      <td>
                        <label class="badge badge-gradient-success">DONE</label>
                      </td>
                      <td> <%= user.profession %></td>
                      <td> <%= user.email %></td>
                    </tr>
                    <% end %>
                    
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>